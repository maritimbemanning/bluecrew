SESSION_SECRET=generate_a_random_32_character_string_here

# ============================================================================
# BASE URL (NEW - REQUIRED FOR VIPPS CALLBACKS)
# ============================================================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# In production: NEXT_PUBLIC_BASE_URL=https://bluecrew.no

