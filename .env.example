# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Redis (Upstash) for Rate Limiting
# IMPORTANT: Do NOT wrap URLs in quotes - use the raw value
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Email (Resend)
RESEND_API_KEY=re_your-api-key-here
RESEND_FROM_EMAIL=noreply@bluecrew.no
RESEND_TO_EMAILS=hr@bluecrew.no,admin@bluecrew.no

# CSRF Protection
CSRF_SECRET=generate-a-random-32-character-string-here

# Clerk Authentication
# Get these from https://dashboard.clerk.com/last-active?path=api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your-publishable-key
CLERK_SECRET_KEY=sk_live_your-secret-key

# Clerk Custom Domain (REQUIRED for production with custom domain)
# This is your Frontend API domain from Clerk dashboard
NEXT_PUBLIC_CLERK_PROXY_URL=https://clerk.bluecrew.no

# Clerk Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/logg-inn
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/registrer
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/min-side
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/min-side

# Clerk Webhook (for user sync)
# Get from Clerk Dashboard -> Webhooks -> Signing Secret
CLERK_WEBHOOK_SECRET=whsec_your-webhook-signing-secret

# Analytics (Optional)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=bluecrew.no

# Sentry Error Monitoring (Optional but recommended)
# Get DSN from https://sentry.io -> Project Settings -> Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://your-key@o123456.ingest.de.sentry.io/project-id
# Optional: For source map uploads (get from Sentry -> Settings -> Auth Tokens)
SENTRY_AUTH_TOKEN=
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug

# AdminCrew Integration (job postings fetched from here)
NEXT_PUBLIC_ADMIN_URL=https://admincrew.no

# Environment
NODE_ENV=development
