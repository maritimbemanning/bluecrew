# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Redis (Upstash) for Rate Limiting
# IMPORTANT: Do NOT wrap URLs in quotes - use the raw value
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Email (Resend)
RESEND_API_KEY=re_your-api-key-here
RESEND_FROM_EMAIL=noreply@bluecrew.no
RESEND_TO_EMAILS=hr@bluecrew.no,admin@bluecrew.no

# CSRF Protection
CSRF_SECRET=generate-a-random-32-character-string-here

# Clerk Authentication
# Get these from https://dashboard.clerk.com/last-active?path=api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key
CLERK_SECRET_KEY=sk_test_your-secret-key
# Redirect URLs (optional, Clerk uses defaults if not set)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/logg-inn
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/registrer
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/min-side
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/min-side

# Analytics (Optional)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=bluecrew.no

# Environment
NODE_ENV=development
