# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Redis (Upstash) for Rate Limiting
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Email (Resend)
RESEND_API_KEY=re_your-api-key-here
RESEND_FROM_EMAIL=noreply@bluecrew.no
RESEND_TO_EMAILS=hr@bluecrew.no,admin@bluecrew.no

# CSRF Protection
CSRF_SECRET=generate-a-random-32-character-string-here

# Vipps OAuth (Optional - for identity verification)
VIPPS_CLIENT_ID=your-vipps-client-id
VIPPS_CLIENT_SECRET=your-vipps-client-secret
VIPPS_SUBSCRIPTION_KEY=your-vipps-subscription-key
VIPPS_API_BASE_URL=https://api.vipps.no
VIPPS_REDIRECT_URI=https://bluecrew.no/api/vipps/callback
VIPPS_ISSUER=https://api.vipps.no/access-management-1.0/access

# Analytics (Optional)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=bluecrew.no

# Environment
NODE_ENV=development
